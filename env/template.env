# Environment Variables Template
# Copy this file to .env in the project root and fill in your actual values
# The .env file is already in .gitignore and will not be committed to version control

# -------------------------
# Database Configuration (PostgreSQL)
# -------------------------
# Choose ONE of the following configurations:

# Local Development ( Setup)
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=3005-final
# DATABASE_USER=postgres
# DATABASE_PASSWORD=root



# Connection string format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# -------------------------
# Application Settings
# -------------------------
# Application environment (development, staging, production)
ENVIRONMENT=development

# Application host and port
APP_HOST=127.0.0.1
APP_PORT=8000

# Application debug mode (True/False)
DEBUG=True

# Secret key for session management and JWT tokens (generate a secure random string)
SECRET_KEY=your_secret_key_here

# -------------------------
# Security Settings
# -------------------------
# JWT token expiration (in minutes)
JWT_EXPIRATION_MINUTES=60

# Password encryption salt rounds
BCRYPT_ROUNDS=12

# -------------------------
# Logging
# -------------------------
LOG_LEVEL=INFO
LOG_FILE=app.log

